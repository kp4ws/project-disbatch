@model IEnumerable<ProjectDisbatch.Web.Models.DTO.DepartmentDto>

@{
}

<h1 class="mt-3">Departments</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Department" asp-action="Add">Add Department</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Code</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var department in Model)
		{
			<tr>
				<td>@department.Id</td>
				<td>@department.Name</td>
				<td>@department.Code</td>
				<td>@department.Description</td>
				<td>
					<a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-light">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>